{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Node.js App Metrics",
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "stat",
        "title": "Total Requests",
        "id": 1,
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(http_requests_total)",
            "legendFormat": "total",
            "interval": "",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Request Rate (req/s)",
        "id": 2,
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ]
      },
      {
        "type": "timeseries",
        "title": "Average Response Time (s)",
        "id": 3,
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(http_response_time_seconds_sum[1m]) / rate(http_response_time_seconds_count[1m])",
            "legendFormat": "avg",
            "refId": "A"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
